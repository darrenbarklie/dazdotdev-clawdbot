{
  "$schema": "https://docs.clawd.bot/schema/clawdbot.json",
  "gateway": {
    "mode": "local",
    "port": 18789,
    "bind": "lan",
    "auth": {
      "mode": "token"
    }
  },
  "agents": {
    "defaults": {
      "workspace": "~/clawd",
      "model": {
        "primary": "minimax/MiniMax-M2.1"
      },
      "sandbox": {
        "mode": "off"
      }
    }
  },
  "auth": {
    "profiles": {
      "minimax:default": {
        "provider": "minimax",
        "mode": "api_key"
      }
    }
  },
  "providers": {
    "whatsapp": {
      "enabled": true,
      "dm": {
        "policy": "pairing"
      }
    },
    "telegram": {
      "enabled": true,
      "dm": {
        "policy": "allowlist",
        "allowFrom": ["5988667035"]
      }
    }
  },
  "models": {
    "mode": "merge",
    "providers": {
      "minimax": {
        "baseUrl": "https://api.minimax.io/anthropic",
        "api": "anthropic-messages",
        "models": [
          {
            "id": "MiniMax-M2.1",
            "name": "MiniMax M2.1",
            "reasoning": false,
            "input": ["text"],
            "cost": {
              "input": 15,
              "output": 60,
              "cacheRead": 2,
              "cacheWrite": 10
            },
            "contextWindow": 200000,
            "maxTokens": 8192
          }
        ]
      }
    }
  },
  "session": {
    "scope": "per-sender",
    "idleMinutes": 60,
    "resetTriggers": ["/new", "/reset"]
  }
}
